<% layout('layouts/boilerplate') %>


    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <h1>Add new data</h1>
            <form action="/party/<%=ovns._id %>?_method=PUT" method="POST" novalidate class="validated">
                <div class="mb-3">
                    <label class="from-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="ovns[title]" required
                        value="<%=ovns.title %>">

                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="from-label" for="year">Year</label>
                    <input class="form-control" type="number" id="year" name="ovns[year]" required
                        value="<%=ovns.year %>">
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="from-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="ovns[image]" required
                        value="<%=ovns.image %>">
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="from-label" for="slogan">Slogan </label>
                    <input class="form-control" type="text" id="slogan" name="ovns[slogan]" required
                        value="<%=ovns.slogan %>">
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label class="from-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="ovns[description]"
                        required><%=ovns.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update</button>
                </div>
            </form>

            <div><a class="btn btn-info d-inline mb-5" href="/party/<%=ovns._id %>">Back to Party details </a>
            </div>
        </div>
    </div>